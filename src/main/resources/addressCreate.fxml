<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eu.qwsome.svj.features.address.CreateAddressController">
  <bottom>
    <ToolBar prefHeight="70.0" prefWidth="524.0" BorderPane.alignment="CENTER">
      <items>
        <Button fx:id="saveAddressButton" mnemonicParsing="false" onAction="#onSaveAddress" text="Uložit"/>
      </items>
    </ToolBar>
  </bottom>
  <center>
    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
      <children>
        <HBox prefHeight="100.0" prefWidth="282.0">
          <children>
            <Label text="Obec"/>
            <TextField fx:id="municipalityInput">
              <HBox.margin>
                <Insets left="42.0"/>
              </HBox.margin>
            </TextField>
          </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label text="Část obce"/>
            <TextField fx:id="municipalityPartInput">
              <HBox.margin>
                <Insets left="12.0"/>
              </HBox.margin>
            </TextField>
          </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label text="Ulice"/>
            <TextField fx:id="streetInput">
              <HBox.margin>
                <Insets left="45.0"/>
              </HBox.margin>
            </TextField>
          </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
          <children>
            <Label text="Číslo domu"/>
            <TextField fx:id="houseNumberInput">
              <HBox.margin>
                <Insets left="3.0"/>
              </HBox.margin>
            </TextField>
          </children>
        </HBox>
      </children>
    </VBox>
  </center>
</BorderPane>
